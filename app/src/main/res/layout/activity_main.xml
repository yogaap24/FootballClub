<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/image_view_club_activity_detail_club"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_view_club_name_activity_detail_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_below="@+id/image_view_club_activity_detail_club"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_view_club_detaiL_activity_detail_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_club_name_activity_detail_club" />

</RelativeLayout>
